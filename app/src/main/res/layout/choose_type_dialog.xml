<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/size_240"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/size_10">

    <TextView
        android:id="@+id/tv_title"
        style="@style/Normal_Primary_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="@dimen/size_16"
        tools:text="Choose Type" />

    <LinearLayout
        android:id="@+id/ll_radio_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="@dimen/size_20"
        android:orientation="vertical"
        android:weightSum="2">

        <RadioGroup
            android:id="@+id/radioGrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbt_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="movie"/>
            <RadioButton
                android:id="@+id/rbt_series"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="series"/>

            <RadioButton
                android:id="@+id/rbt_episode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="episode"/>
        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/btn_okay"
        style="@style/Normal_Primary_Text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_40"
        android:layout_below="@id/ll_radio_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_20"
        android:background="@color/black"
        android:text="@string/okay"
        android:textColor="@color/white"
        android:visibility="visible"/>


</RelativeLayout>